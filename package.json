{
  "name": "connect-four",
  "version": "1.0.0",
  "description": "Simple webgl game using PixiJS",
  "main": "index.js",
  "scripts": {
    "serve:client": "webpack-dev-server --config webpack.dev.js --open --hot -d --progress",
    "build:server": "tsc --project tsconfig.server.json",
    "build:client": "webpack --config webpack.prod.js --progress",
    "clean": "rimraf build/prod",
    "build": "npm run build:server && npm run build:client",
    "start": "node build/prod"
  },
  "author": "William Picard",
  "license": "MIT",
  "dependencies": {
    "express": "^4.17.1",
    "pixi.js": "^5.2.4",
    "serve": "^11.3.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.6",
    "css-loader": "^3.6.0",
    "html-webpack-plugin": "^4.3.0",
    "rimraf": "^3.0.2",
    "style-loader": "^1.2.1",
    "ts-loader": "^7.0.5",
    "typescript": "^3.9.5",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.11.0",
    "webpack-merge": "^4.2.2"
  }
}
