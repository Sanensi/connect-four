{
  "name": "connect-four",
  "version": "1.0.0",
  "description": "Simple webgl game using PixiJS",
  "main": "build/prod/index.js",
  "scripts": {
    "dev": "run-p watch:server dev:*",
    "watch:server": "npm run build:server -- -w",
    "dev:server": "nodemon --watch build/prod",
    "dev:client": "webpack-dev-server --config webpack.dev.js --open --hot -d",
    "build:server": "tsc --project tsconfig.server.json",
    "build:client": "webpack --config webpack.prod.js --progress",
    "clean": "rimraf build/prod",
    "build": "run-s build:*",
    "start": "node build/prod"
  },
  "author": "William Picard",
  "license": "MIT",
  "dependencies": {
    "express": "^4.17.1",
    "pixi.js": "^5.2.4",
    "socket.io": "^2.3.0",
    "socket.io-client": "^2.3.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.6",
    "@types/socket.io": "^2.1.8",
    "@types/socket.io-client": "^1.4.33",
    "css-loader": "^3.6.0",
    "html-webpack-plugin": "^4.3.0",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "style-loader": "^1.2.1",
    "ts-loader": "^7.0.5",
    "typescript": "^3.9.5",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.11.0",
    "webpack-merge": "^4.2.2"
  }
}
